<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の編集</h2>
  <form action="/po/update/<%= data.id - 1 %>" method="POST">
    <table>
      <tr><th>項目</th><th>データ</th></tr>
      <tr><td>ID</td><td><input type="text" name="id" value="<%= data.id %>"></td></tr>
      <tr><td>名前</td><td><input type="text" name="name" value="<%= data.name %>"></td></tr>
      <tr><td>タイプ</td><td><input type="text" name="type" value="<%= data.type %>"></td></tr>
      <tr><td>分類</td><td><input type="text" name="class" value="<%= data.class %>"></td></tr>
      <tr><td>特性</td><td><input type="text" name="character" value="<%= data.character %>"></td></tr>
      <tr><td>生息地</td><td><input type="text" name="region" value="<%= data.region %>"></td></tr>
    </table>
    <input type="submit" values="登録">
  </form>
  <a href="/po/">一覧に戻る</a>
</body>
</html>